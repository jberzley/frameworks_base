<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Is Advanced Reboot enabled? -->
    <bool name="config_advanced_reboot">true</bool>

    <!-- The duration (in milliseconds) of recent app screen animation. -->
    <integer name="config_recentDefaultDur">300</integer>

    <!-- The duration (in milliseconds) of recent app screen exit animation. -->
    <integer name="config_recentExitDur">450</integer>

    <!-- Hardware keys present on the device, stored as a bit field.
         This integer should equal the sum of the corresponding value for each
         of the following keys present:
             1 - Home
             2 - Back
             4 - Menu
             8 - Assistant (search)
            16 - App switch
            32 - Camera
            64 - Volume rocker
         For example, a device with Home, Back and Menu keys would set this
         config to 7. -->
    <integer name="config_deviceHardwareKeys">64</integer>

    <!-- Whether device has dash charging support -->
    <bool name="config_hasDashCharger">false</bool>

    <!-- Extended Boosts for QPerformance -->
    <!-- Whether cpu boost is enabled right after boot -->
    <bool name="config_enableCpuBoostOnBoot">false</bool>

    <!-- Duration of the boost in seconds, default is 30 -->
    <integer name="onbootboost_duration">0</integer>

    <!-- Boost parameters which get passed to QPerformance -->
    <integer-array name="onbootboost_param_value"/>

    <!-- Whether Keypress Boost is enabled -->
    <bool name="config_enableKeypressBoost">false</bool>

    <!-- Boost parameters which get passed to QPerformance -->
    <integer-array name="keypressboost_strong_param_value"/>
    <integer-array name="keypressboost_weak_param_value"/>

    <!-- Whether FP unlock Boost is enabled
         Depends on Keypress Boost -->
    <bool name="config_enableFPUnlockBoost">false</bool>
    <integer name="fpunlockboost_duration">1200</integer>
</resources>
